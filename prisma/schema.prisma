generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url      = "postgresql://root:shopperpassword@localhost:5432/shopper?schema=public"
}

model Client {
  id           String        @id
  measurements Measurement[]
}

model Measurement {
  id String @id

  client    Client @relation(fields: [client_id], references: [id])
  client_id String

  image_url     String
  value         Int
  datetime      DateTime
  type          String
  has_confirmed Boolean
}
